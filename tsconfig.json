{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "lib": ["dom", "es5", "esnext"],
    "outDir": "./dist",
    "rootDir": "./src"
  },

  "exclude": ["node_modules", "dist"]
}
